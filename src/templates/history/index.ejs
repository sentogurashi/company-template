<%# declaration %>
<%
const findContentById = id => pageInfo.content.find(content => content.id === id);
const contentMain = findContentById('main');
const contentMore = findContentById('more');
%>
<%# /declaration %>

<%# insertContent %>
<% function insertContent(__output) { %>

<div class="HeroImage js-Parallax">
  <div class="HeroImage__inner js-Parallax__inner">
    <div class="HeroImage__image" style="background-image:url('/dest/images/history/hero.jpg')"></div>
  </div>
</div>
<section class="Module Module--top">
  <article class="Article Article--withColumn">
    <div class="Article__headingContainer">
      <%- include('../_include/_component/_heading', {
        setting: {
          text: contentMain.heading,
          isVertical: true,
          classNames: ['Module__heading Article__heading'],
        }
      }) %>
    </div>
    <!-- /.Article__headingContainer -->
    <div class="Article__body">
      <%- include('../_include/_component/_text', {
        setting: {
          text: contentMain.text,
        }
      }) %>
    </div>
    <!-- /.Article__body -->
  </article>
</section>
<!-- /.Module -->

<section class="Module">
<%- include('../_include/_component/_heading', {
  setting: {
    text: contentMore.heading,
    classNames: ['Module__heading Article__heading'],
  }
}) %>
<div class="Module__gridListContainer">
  <ul class="GridList GridList--large">
    <% contentMore.list.forEach((info) => { %>
      <li class="GridList__item">
        <a class="Cell" href="<%= info.link %>">
          <div class="Cell__thumbnail" style="background-image:url('/dest/images/history/<%= info.image %>.jpg')"></div>
          <p class="Cell__title"><%= info.title; %></p>
        </a>
      </li>
    <% }); %>
  </ul>
</div>
<!-- /.Module__gridListContaier -->
</section>
<!-- /.Module -->

<% } %>
<%# /insertContent %>

<%# extend %>
<%- include ../_include/_layout/_base %>
<%# /extend %>