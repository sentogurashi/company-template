<% 
const {
  elementLevel = 1,
  presentationLevel = 1,
  isVertical = false,
  text = '',
  classNames = [],
} = setting;

let classNameArray = ['Heading'];
classNameArray.push(`Heading--level${presentationLevel}`);
classNameArray.push(isVertical ? 'Heading--vertical' : 'Heading--horizontal');
if (classNames) classNameArray = [...classNameArray, ...classNames];
%>
<h<%= elementLevel %> class="<%= classNameArray.join(' '); %>"><%- text.replace(/\n/g, '<br>') %></h<%= elementLevel %>>
